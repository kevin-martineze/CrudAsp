@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    LISTAR CONTACTO
  </div>
  <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-database-add"></i> Crear Nuevo</a>
      <hr />
      <table class="table table-bordered">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Telefono</th>
                  <th>Correo</th>
              </tr>
          </thead>
          <tbody>
              @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td><a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-warning btn-sm" asp-route-IdContacto="@item.IdContacto"><i class="bi bi-pencil"></i> Editar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-IdContacto="@item.IdContacto"><i class="bi bi-person-dash"></i> Eliminar</a></td>
                    </tr>
                }
            </tbody>

      </table>



  </div>
</div>

